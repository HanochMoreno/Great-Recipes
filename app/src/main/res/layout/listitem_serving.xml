<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView_serving"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_card_serving"
    android:layout_gravity="center"
    android:background="@color/colorCardBackground"
    card_view:cardCornerRadius="15dp">

    <ImageView
        android:id="@+id/imageView_servingImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/textView_noImageAvailable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:minLines="2"
        android:text="@string/no_image_available"
        android:textSize="@dimen/text_size_list_item_serving_no_image_available" />

    <ImageView
        android:id="@+id/imageView_checkedIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_checked"
        android:visibility="invisible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textView_servingType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="3"
        android:background="@drawable/shape_card_title_background"
        android:gravity="center|start|top"
        android:paddingBottom="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="3dp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_list_item_serving_type"
        tools:text="Serving Type" />

    <TextView
        android:id="@+id/textView_recipeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="5dp"
        android:layout_weight="3"
        android:background="@drawable/shape_card_background"
        android:gravity="center|start|bottom"
        android:paddingBottom="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="3dp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_list_item_serving_recipe_title"
        tools:text="Recipe Title" />

</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorListContainerBackground"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context="com.hanoch.greatrecipes.view.RegisterActivity">

    <ImageView
        android:id="@+id/iv_accountImage"
        android:layout_width="@dimen/size_login_image"
        android:layout_height="@dimen/size_login_image"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_end_bubble"
        android:layout_marginTop="@dimen/margin_end_bubble"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_user_name"
        tools:ignore="ContentDescription" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_email"
        android:layout_width="@dimen/width_login_edit_text"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_accountImage"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_edit_text_register"
        android:background="@drawable/selector_edit_text"
        android:paddingBottom="@dimen/padding_bottom_and_top_login_edit_text"
        android:paddingLeft="@dimen/padding_left_and_right_login_edit_text"
        android:paddingRight="@dimen/padding_left_and_right_login_edit_text"
        android:paddingTop="@dimen/padding_bottom_and_top_login_edit_text">

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ@_-.0123456789"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:paddingTop="@dimen/padding_bottom_and_top_login_edit_text"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_login"
            tools:text="Hanoch001@gmail.com" />

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/tv_mailWithPasswordWillBeSent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/til_email"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="@string/the_password_will_be_sent_to_your_email" />

    <!--===================================================================================-->

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_username"
        android:layout_width="@dimen/width_login_edit_text"
        android:layout_height="wrap_content"
        android:layout_below="@+id/til_email"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_edit_text_register"
        android:background="@drawable/selector_edit_text"
        android:paddingBottom="@dimen/padding_bottom_and_top_login_edit_text"
        android:paddingLeft="@dimen/padding_left_and_right_login_edit_text"
        android:paddingRight="@dimen/padding_left_and_right_login_edit_text"
        android:paddingTop="@dimen/padding_bottom_and_top_login_edit_text">

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="@string/username"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:paddingTop="@dimen/padding_bottom_and_top_login_edit_text"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_login"
            tools:text="Hanoch-TEST" />

    </android.support.design.widget.TextInputLayout>

    <!--===================================================================================-->

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_password"
        android:layout_width="@dimen/width_login_edit_text"
        android:layout_height="wrap_content"
        android:layout_below="@+id/til_username"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_edit_text_register"
        android:background="@drawable/selector_edit_text"
        android:paddingBottom="@dimen/padding_bottom_and_top_login_edit_text"
        android:paddingLeft="@dimen/padding_left_and_right_login_edit_text"
        android:paddingTop="@dimen/padding_bottom_and_top_login_edit_text">

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingTop="@dimen/padding_bottom_and_top_login_edit_text"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_login"
            tools:text="password" />

    </android.support.design.widget.TextInputLayout>

    <!--===================================================================================-->

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_retypePassword"
        android:layout_width="@dimen/width_login_edit_text"
        android:layout_height="wrap_content"
        android:layout_below="@+id/til_password"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_edit_text_register"
        android:background="@drawable/selector_edit_text"
        android:paddingBottom="@dimen/padding_bottom_and_top_login_edit_text"
        android:paddingLeft="@dimen/padding_left_and_right_login_edit_text"
        android:paddingTop="@dimen/padding_bottom_and_top_login_edit_text">

        <EditText
            android:id="@+id/et_retypePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="@string/retype_password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingTop="@dimen/padding_bottom_and_top_login_edit_text"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_login"
            tools:text="password" />

    </android.support.design.widget.TextInputLayout>

    <!--===================================================================================-->

    <TextView
        android:id="@+id/tv_forgotYourPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_alreadyHaveAnAccountOrRegister"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="@string/forgot_your_password" />

    <TextView
        android:id="@+id/tv_forgotYourPasswordClickHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_alreadyHaveAnAccountOrRegister"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_toEndOf="@+id/tv_forgotYourPassword"
        android:layout_toRightOf="@+id/tv_forgotYourPassword"
        android:text="@string/click_here"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />

    <!--===================================================================================-->

    <Button
        android:id="@+id/btn_proceed"
        android:layout_width="200dp"
        android:layout_height="@dimen/height_button"
        android:layout_above="@+id/tv_forgotYourPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/fab_margin"
        android:background="@drawable/selector_button"
        android:text="@string/proceed"
        android:textSize="@dimen/text_size_login" />

    <!--===================================================================================-->

    <TextView
        android:id="@+id/tv_alreadyHaveAnAccountOrRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_wantToTestTheApp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="@string/already_have_an_account" />

    <TextView
        android:id="@+id/tv_haveAccountOrRegisterClickHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_wantToTestTheApp"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_toEndOf="@+id/tv_alreadyHaveAnAccountOrRegister"
        android:layout_toRightOf="@+id/tv_alreadyHaveAnAccountOrRegister"
        android:text="@string/click_here"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />

    <!--===================================================================================-->

    <TextView
        android:id="@+id/tv_wantToTestTheApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="@string/want_to_test_the_app_before" />

    <TextView
        android:id="@+id/tv_testAppClickHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_haveAccountOrRegisterClickHere"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_toEndOf="@+id/tv_wantToTestTheApp"
        android:layout_toRightOf="@+id/tv_wantToTestTheApp"
        android:text="@string/click_here"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />

</RelativeLayout>

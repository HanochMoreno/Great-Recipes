<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/recipes_lists_preferences">

        <Preference
            android:icon="@mipmap/ic_prefs_delete_recipes"
            android:key="deleteAll"
            android:summary="@string/the_operation_is_irreversible"
            android:title="@string/delete_all_the_recipes_lists" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/online_search_preferences">

        <ListPreference
            android:icon="@mipmap/ic_prefs_search_results"
            android:defaultValue="10"
            android:dialogTitle="@string/set_max_online_search_results"
            android:entries="@array/maxOnlineSearchResultsEntries"
            android:entryValues="@array/maxOnlineSearchResultsValues"
            android:key="maxOnlineSearchResults"
            android:title="@string/max_online_search_results" />

    </PreferenceCategory>

</PreferenceScreen>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorListContainerBackground"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:measureWithLargestChild="false"
        android:orientation="vertical"
        android:padding="@dimen/padding_menu">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:measureWithLargestChild="false">

            <LinearLayout
                android:id="@+id/layout_settings"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:measureWithLargestChild="false"
                android:orientation="vertical"
                android:padding="@dimen/padding_menu_item">

                <ImageView
                    android:id="@+id/imageView_settings"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_settings" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center|top"
                    android:minLines="2"
                    android:paddingTop="@dimen/padding_menu_item_text_top"
                    android:text="@string/settings"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/text_size_menu_item" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_addRecipeManually"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/padding_menu_item">

                <ImageView
                    android:id="@+id/imageView_addOwnRecipe"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_add_manually" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center|top"
                    android:minLines="2"
                    android:paddingTop="@dimen/padding_menu_item_text_top"
                    android:text="@string/add_your_own_recipe"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/text_size_menu_item" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_onlineSearch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/padding_menu_item">

                <ImageView
                    android:id="@+id/imageView_onlineSearch"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_online_search" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center|top"
                    android:minLines="2"
                    android:paddingTop="@dimen/padding_menu_item_text_top"
                    android:text="@string/search_recipe_online"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/text_size_menu_item" />

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:measureWithLargestChild="false">

            <LinearLayout
                android:id="@+id/layout_mealPlanner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/padding_menu_item">

                <ImageView
                    android:id="@+id/imageView_mealPlanner"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_plan_meal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center|top"
                    android:minLines="2"
                    android:paddingTop="@dimen/padding_menu_item_text_top"
                    android:text="@string/meal_planner"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/text_size_menu_item" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_myRecipesLists"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/padding_menu_item">

                <ImageView
                    android:id="@+id/imageView_recipesLists"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_lists" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center|top"
                    android:minLines="2"
                    android:paddingTop="@dimen/padding_menu_item_text_top"
                    android:text="@string/my_recipes_lists"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/text_size_menu_item" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_login"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/padding_menu_item">

                <ImageView
                    android:id="@+id/imageView_login"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_login" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center|top"
                    android:minLines="2"
                    android:paddingTop="@dimen/padding_menu_item_text_top"
                    android:text="@string/login"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/text_size_menu_item" />
            </LinearLayout>
        </TableRow>

    </LinearLayout>

</LinearLayout>
